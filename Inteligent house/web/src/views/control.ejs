</head>
<body>
    <header>
        <div class="navBar">
            <a href="/" class="title"><b>Home Genie
                </b></a>
            <ul>
                <li class="navList">
                    <a href="/" class="navItem">Home</a>
                    <a href="/login" class="navItem">Login</a>
                    <a href="/signIn" class="navItem">Sign in</a>
                </li>
            </ul>

        </div>

    </header>

    <main>
        <article class="main_container">
            <form action="/controlLight" class="form_input" method="post">
                <p class="subtitle">Lighting</p>
                <div class="Lighting">
                    <!-- ... -->

                    <div class="light_block">
                        <p class="text">Full house</p>
                        <input type="checkbox" name="full_house" id="">
                    </div>

                    <div class="light_block">
                        <p class="text">Main room</p>
                        <input type="checkbox" name="main_room" id="">
                    </div>

                    <div class="light_block">
                        <p class="text">Bedroom</p>
                        <input type="checkbox" name="bedroom" id="">
                    </div>

                    <div class="light_block">
                        <p class="text">Kitchen</p>
                        <input type="checkbox" name="kitchen" id="">
                    </div>
                </div>
                <div class="div_button">
                    <button class="button_vanessa" type="submit">
                        <span class="text ">Submit</span>
                    </button>
                </div>
                
                
            </form>

            <form action="/controlSec" class="form_input" method="post">
                <p class="subtitle">Security</p>
                <div class="Lighting">
                    <div class="light_block">
                        <p class="text">Alarm</p>
                        <input type="checkbox" name="alarm" id="">
                    </div>
    
                    <div class="light_block">
                        <p class="text">Door</p>
                        <input type="checkbox" name="door" id="">
                    </div>
    
                    <div class="light_block">
                        <p class="text">Gate</p>
                        <input type="checkbox" name="gate" id="">
                    </div>
    
                    <div class="light_block">
                        <p class="text">Sound Alarm</p>
                        <input type="checkbox" name="sound_alarm" id="">
                    </div>
                </div>
                <div class="div_button">
                    <button class="button_vanessa" type="submit">
                        <span class="text ">Submit</span>
                    </button>
                </div>
            
            </form>


        </article>


    </main>

</body>

</html>